{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@environment": ["src/environment"],
      "@utilities/*": ["src/utilities/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
