{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@consts/*": ["src/consts/*"],
      "@decorators": ["src/common/decorators/index"],
      "@entities": ["src/entities/index"],
      "@environment": ["src/environment"],
      "@guards": ["src/common/guards/index"],
      "@metadata": ["src/meta-data"],
      "@seeds/*": ["src/seeds/*"],
      "@utilities/*": ["src/utilities/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
